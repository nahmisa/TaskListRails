<h1>Tasks#edit</h1>
<p>Find me in app/views/tasks/edit.html.erb</p>
<!-- url: each_task_path(@task) -->

<%= form_for @task do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
