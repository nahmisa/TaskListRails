<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ol>

<% @tasks.each do |task| %>
  <li>
  <%= link_to "#{task.title}", each_task_path(task)  %>
  <%= link_to 'Destroy', each_task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>

</ol>

<%= link_to "Add New Task", tasks_new_path %>
