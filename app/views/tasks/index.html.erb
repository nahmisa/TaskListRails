<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<table>
  <tr>
    <th>Title</th>
    <th>Destroy</th>
    <!-- will need this later <th colspan="3"></th> -->
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to "#{task.title}", each_task_path(task) %></td>

    <td><%= button_to each_task_path(task), data: {confirm: "Are you sure you want to delete permanently?"}, method: :delete do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %></td>
  </tr>
<% end %>
</table>

<%= link_to "Add New Task", tasks_new_path %>
